<Window x:Class="OnlineStoreManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineStoreManagementSystem"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
            Title="Авторизация" Height="500" Width="500" WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="YourLogin" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="Логин" FontSize="25" Height="70" Margin="10"/>
            <TextBox x:Name="YourPassword"  FontSize="25" Text="Пароль" Height="50" Margin="10"/>
            <Button x:Name="SignIn" Content="Войти" Height="50" Width="200" Margin="10" HorizontalAlignment="Left" Click="SignIn_Click"/>
            <Button x:Name="OpenSignUpWindow" Content="Регистрация" Width="200" Height="50" HorizontalAlignment="Left" Margin="10" Click="OpenSignUpWindow_Click"/>
        </StackPanel>
    </Grid>
</Window>
